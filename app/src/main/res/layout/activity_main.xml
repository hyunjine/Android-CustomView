<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".MainActivity">

    <android.widget.Button
        android:id="@+id/btn_change"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/btn_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.customview.MainCustomButton
        android:id="@+id/btn_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgActive="@drawable/edge_round_morning"
        app:bgDrawable="@drawable/ic_sunny"
        app:bgInactive="@drawable/edge_round_morning_inactive"
        app:layout_constraintTop_toBottomOf="@id/btn_change"
        app:text="@string/btn_first" />

    <com.example.customview.MainCustomButton
        android:id="@+id/btn_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgActive="@drawable/edge_round_evening"
        app:bgDrawable="@drawable/ic_moon"
        app:bgInactive="@drawable/edge_round_evening_inactive"
        app:layout_constraintTop_toBottomOf="@id/btn_first"
        app:text="@string/btn_second" />

    <com.example.customview.MainCustomButton
        android:id="@+id/btn_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgActive="@drawable/edge_round_sleep"
        app:bgDrawable="@drawable/ic_alarm"
        app:bgInactive="@drawable/edge_round_sleep_inactive"
        app:layout_constraintTop_toBottomOf="@id/btn_second"
        app:text="@string/btn_third" />

    <com.example.customview.MainCustomButton
        android:id="@+id/btn_fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:bgActive="@drawable/edge_round_black"
        app:bgDrawable="@drawable/ic_note"
        app:bgInactive="@drawable/edge_round_sleep_inactive"
        app:layout_constraintTop_toBottomOf="@id/btn_third"
        app:text="@string/btn_fourth" />

    <com.example.customview.MainCustomButton
        android:id="@+id/btn_fifth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgActive="@drawable/edge_round_black"
        app:bgDrawable="@drawable/ic_check"
        app:bgInactive="@drawable/edge_round_sleep_inactive"
        app:layout_constraintTop_toBottomOf="@id/btn_fourth"
        app:text="@string/btn_fifth" />


</androidx.constraintlayout.widget.ConstraintLayout>

